<div class="col-md-8 col-md-offset-2 horiz-center">
  <h2 style="text-align: center;">To-Do Items</h2>
		<ul class="list-group checked-list-box">
      <% @items.each do |item| %>
      	<li class="list-group-item"><input type="checkbox" style="margin-right: 5px;"><%= item.name %></li>
      <% end %>
      <li class="list-group-item", id="new-item">  	
	      <%= form_for @item, url: user_items_path(@user) do |f| %>
	  			<div class="form-group", style="margin-bottom: 0px;">
		  			<div class="input-group">
		  				<%= f.hidden_field :user_id, value: current_user.id %>
		  				<%= f.text_field :name, class: 'form-control', style: 'border-bottom-left-radius: 4px', placeholder: "Enter new to-do item" %>
		  				<span class="input-group-btn">
		  					<%= f.submit "Save", class: 'btn btn-primary', :id => "button-grow" %>
		  				</span>
		  			</div>
		  		</div>
	  		<% end %>
  		</li>
    </ul>
</div>
