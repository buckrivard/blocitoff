<div class="col-md-8 col-md-offset-2 horiz-center">
	<div>
		<h2 class='text-center'>To-Do Items</h2>
	  <%= form_for [current_user, @item], url: user_items_path(current_user) do |f| %>
	    <div class="form-group mb0">
	     	<div class="input-group rounded">
	     		<%= f.text_field :name, class: 'form-control', placeholder: 'Enter new to-do item' %>
		      <%= f.hidden_field :user_id, value: current_user.id %>
		      <span class="input-group-btn">
		      	<%= f.submit "Save", class: 'btn btn-primary', id: 'button-grow' %>
		     	</span>
	    	</div>
	    </div>
	  <% end %>
	</div>
  
  <ul class="list-group checked-list-box flex-columns">
    <%= render @items %>
  </ul>
</div>